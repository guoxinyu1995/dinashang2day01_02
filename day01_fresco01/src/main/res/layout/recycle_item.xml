<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
   <com.facebook.drawee.view.SimpleDraweeView
       android:id="@+id/simple"
       android:layout_width="80dp"
       android:layout_height="80dp"
       fresco:roundAsCircle="true"
       fresco:layout_constraintLeft_toLeftOf="parent"
       fresco:layout_constraintTop_toTopOf="parent"
       fresco:layout_constraintBottom_toBottomOf="parent"
       />
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        fresco:layout_constraintLeft_toRightOf="@id/simple"
        fresco:layout_constraintTop_toTopOf="@id/simple"
        fresco:layout_constraintBottom_toBottomOf="@id/simple"
        fresco:layout_constraintRight_toRightOf="parent"
        android:text="title"
        android:textSize="20sp"
        />
</android.support.constraint.ConstraintLayout>